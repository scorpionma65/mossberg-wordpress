# ignore everything in the root except the "wp-content" directory.
!wp-content/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/

# ignore these plugins
wp-content/plugins/hello.php

# ignore specific themes
wp-content/themes/twenty*/
wp-content/themes/mossberg/inc/configurator/*

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite
error_log

# ignore cache files
*.cache

# ignore the env specific files (different per env)
wp-config.php
robots.txt
api/mysql/inc-mysql-connect-magento.php
api/mysql/inc-mysql-connect.php

# ignore the magento store
store/

# ignore freshdesk attachments
api/freshdesk/ffl/
ampi/freshdesk/ffl/*

# ignore mac directory files
.DS_Store
